    font-size: 2em; /* Taille des icônes */
    text-decoration: none; /* Supprimer la décoration des liens */
    width: 60px; /* Largeur du conteneur */
    height: 60px; /* Hauteur du conteneur */
    display: flex; /* Utiliser Flexbox pour centrer l'icône */
    align-items: center; /* Aligner verticalement */
    justify-content: center; /* Aligner horizontalement */
    border-radius: 50%; /* Coins arrondis pour un cercle */
    border: 2px solid transparent; /* Bordure transparente par défaut */
    transition: all 0.3s ease; /* Transition pour l'effet au survol */
    margin: 0 10px; /* Espacement entre les icônes */
    background-color: #f0f0f0; /* Couleur de fond des icônes */
}

.contact-info a:hover {
    border: 2px solid #333; /* Bordure au survol */
    background-color: #e0e0e0; /* Couleur de fond au survol */
}

